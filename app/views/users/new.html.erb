<h1 class="text-white d-flex justify-content-center">Welcome to the Registration Page of LifeStyle Articles app</h1>

<div class="center_div">

  <%= form_with model: @user, method: :post do |form| %>
    
    <div class="form-group mt-5">
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control", placeholder: "Your username here"%>
    </div>
    <div class="form-group">
      <%= form.submit "Create new user", class: "btn btn-lg btn-primary"  %>
    </div>
    <br>
  <% end %>

</div>