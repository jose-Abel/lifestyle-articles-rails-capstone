<h1 class="text-white d-flex justify-content-center">Welcome to the Login Page of LifeStyle Articles App</h1>

<div class="center_div">

  <%= form_with scope: :session, url: login_path, method: :post do |form| %>
    <div class="form-group mt-5">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "Your name here"%>
    </div>  
    <div class="form-group">
      <%= form.submit "Login user", class: "btn btn-lg btn-primary" %>
    </div>
    <br>
  <% end %>
</div>